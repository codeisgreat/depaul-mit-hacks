<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Image:</b>
  <%= @event.image %>
</p>

<%= link_to 'New SlideShow', new_event_slideshow_path(@event.id) %><br/><br/>

<ul>
  <% @event.slideshows.each do |slideshow| %>
    <li><%= link_to slideshow.name, event_slideshow_path(@event, slideshow) %></li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
